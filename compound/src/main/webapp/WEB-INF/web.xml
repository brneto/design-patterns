<web-app xmlns="http://java.sun.com/xml/ns/javaee"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
                      http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
  version="3.0"
  metadata-complete="true">

    <description>
      DJView Servlet Application
    </description>
    <display-name>DJView Servlet Application</display-name>

    <servlet>
      <servlet-name>DJView</servlet-name>
      <servlet-class>djview.controller.servlet.DJView</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>DJView</servlet-name>
        <url-pattern>/DJView</url-pattern>
    </servlet-mapping>

</web-app>